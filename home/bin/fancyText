#!/usr/bin/env bash

# Usage: ./fancy.sh "YourText"

upper_src=( {A..Z} )
upper_dst=(
  ğ‘¨ ğ‘© ğ‘ª ğ‘« ğ‘¬ ğ‘­ ğ‘® ğ‘¯ ğ‘° ğ‘« ğ‘² ğ‘³ ğ‘´ ğ‘µ ğ‘¶ ğ‘· ğ‘¸ ğ‘¹ ğ‘º ğ‘» ğ‘¼ ğ‘½ ğ‘¾ ğ‘¿ ğ’€ ğ’
)

lower_src=( {a..z} )
lower_dst=(
  ğ’‚ ğ’ƒ ğ’„ ğ’… ğ’† ğ’‡ ğ’ˆ ğ’‰ ğ’Š ğ’‹ ğ’Œ ğ’ ğ’ ğ’ ğ’ ğ’‘ ğ’’ ğ’“ ğ’” ğ’• ğ’– ğ’— ğ’˜ ğ’™ ğ’š ğ’›
)

declare -A map

for i in "${!upper_src[@]}"; do
  map["${upper_src[$i]}"]="${upper_dst[$i]}"
done

for i in "${!lower_src[@]}"; do
  map["${lower_src[$i]}"]="${lower_dst[$i]}"
done

input="$1"
out=""

for ((i=0; i<${#input}; i++)); do
  ch="${input:$i:1}"
  if [[ ${map[$ch]} ]]; then
    out+="${map[$ch]}"
  else
    out+="$ch"
  fi
done

printf '%s\n' "$out"
