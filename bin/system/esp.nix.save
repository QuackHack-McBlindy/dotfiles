    esp = { # ðŸ¦† says â®ž quackin' flashin' helpin' scriptin' - yo 
      description = "Declarative firmware deployment tool for ESP32 boards with built-in version control.";
      category = "ðŸ–¥ï¸ System Management";
      logLevel = "DEBUG";
      parameters = [
